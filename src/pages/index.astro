---
import StarsBackground from "../components/StarsBackground.astro";
import Header from "../components/Nadbar.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Inicio">
  <StarsBackground />

  <Header />

  <main class="hero">
    <div class="globe-back">
    </div>

    <div class="scroll-indicator">
      <div class="mouse">
        <span class="wheel"></span>
      </div>
    </div>
  </main>

  <style>
    body {
      margin: 0;
      background: #0a0a0a;
      font-family: sans-serif;
      overflow-y: auto;
    }

    .hero {
      position: relative;
      width: 100%;
      height: 100vh;
      z-index: 10;
    }

    .scroll-indicator {
      position: fixed;
      bottom: 24px;
      left: 50%;
      transform: translateX(-50%);
      z-index: 999;
      text-align: center;
      color: rgba(255, 255, 255, 0.75);
      font-size: 12px;
      letter-spacing: 1px;
      animation: fadeIn 2s ease forwards;
    }

    .mouse {
      width: 26px;
      height: 44px;
      border: 2px solid rgba(255,255,255,0.8);
      border-radius: 20px;
      margin: 0 auto 6px;
      position: relative;
    }

    .wheel {
      width: 4px;
      height: 8px;
      background: white;
      border-radius: 4px;
      position: absolute;
      top: 8px;
      left: 50%;
      transform: translateX(-50%);
      animation: wheelMove 1.5s infinite;
    }

    @keyframes wheelMove {
      0% { opacity: 0; transform: translate(-50%, 0); }
      30% { opacity: 1; }
      100% { opacity: 0; transform: translate(-50%, 10px); }
    }

    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }
  </style>
</BaseLayout>
