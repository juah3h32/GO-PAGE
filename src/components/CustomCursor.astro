<div class="custom-cursor">
  <div class="cursor-dot"></div>
  <div class="ring ring-outer"></div>
  <div class="ring ring-middle"></div>
  <div class="ring ring-inner"></div>
</div>

<style>
:root {
  --tech-orange: #ff9100;
  --tech-orange-glow: rgba(255, 145, 0, 0.5);
  --dot-size: 8px;
  --cursor-size: 60px;
}

/* 1. Lógica base: El cursor nativo se oculta solo si NO es táctil */
@media (hover: hover) and (pointer: fine) {
    body {
        cursor: none; /* Solo oculta el nativo en PC */
    }
}

.custom-cursor {
  position: fixed;
  top: 0;
  left: 0;
  pointer-events: none;
  width: var(--cursor-size);
  height: var(--cursor-size);
  display: flex;
  justify-content: center;
  align-items: center;
  transform: translate(-50%, -50%);
  z-index: 9999;
}

/* 2. Lógica de ocultación para móviles/tablets */
/* Si el dispositivo NO tiene hover (es táctil) O el puntero es grueso (dedo) */
@media (hover: none), (pointer: coarse) {
    .custom-cursor {
        display: none !important; /* Fuerza la desaparición */
        opacity: 0 !important;
        visibility: hidden !important;
    }
    body {
        cursor: auto !important; /* Asegura que el sistema maneje el puntero */
    }
}

/* Estilos de los anillos y puntos (Sin cambios) */
.cursor-dot {
  position: absolute;
  width: var(--dot-size);
  height: var(--dot-size);
  background: var(--tech-orange);
  border-radius: 50%;
  z-index: 10;
  box-shadow: 0 0 8px var(--tech-orange-glow);
}

.ring {
  position: absolute;
  border-radius: 50%;
  border: 2px solid transparent;
}

.ring-outer {
  width: 100%;
  height: 100%;
  border-top: 3px solid var(--tech-orange);
  border-bottom: 3px solid var(--tech-orange);
  animation: spin 4s linear infinite;
  opacity: 0.8;
  box-shadow: 0 0 15px var(--tech-orange-glow);
}

.ring-middle {
  width: 85%;
  height: 85%;
  border-left: 2px solid #fff;
  border-right: 2px solid #fff;
  animation: spin-reverse 3s linear infinite;
  opacity: 0.3;
}

.ring-inner {
  width: 70%;
  height: 70%;
  border: 1px dashed var(--tech-orange);
  animation: spin 6s linear infinite;
  opacity: 0.5;
}

@keyframes spin { 100% { transform: rotate(360deg); } }
@keyframes spin-reverse { 100% { transform: rotate(-360deg); } }
</style>

<script is:inline>
// DETECCIÓN ROBUSTA DE MÓVIL
// Verifica si el dispositivo tiene capacidad táctil física
const isTouch = (('ontouchstart' in window) || (navigator.maxTouchPoints > 0));

const cursor = document.querySelector('.custom-cursor');

if (isTouch) {
    // Si es táctil, eliminamos el elemento del DOM directamente para asegurar que no se vea
    if(cursor) cursor.remove();
} else {
    // Solo activamos la lógica si NO es táctil (PC con mouse)
    const cursorDot = document.querySelector('.cursor-dot');
    let mouseX = 0, mouseY = 0;
    let posX = 0, posY = 0;
    const delay = 0.19;

    document.addEventListener('mousemove', e => {
      mouseX = e.clientX;
      mouseY = e.clientY;
    });

    function animateCursor() {
      posX += (mouseX - posX) * delay;
      posY += (mouseY - posY) * delay;
      
      // Verificación extra por seguridad antes de mover
      if (cursor) {
        cursor.style.transform = `translate(${posX}px, ${posY}px) translate(-50%, -50%)`;
        requestAnimationFrame(animateCursor);
      }
    }
    
    // Iniciar animación
    animateCursor();
}
</script>