---
/* src/components/DockMenu.astro */
const currentPath = Astro.url.pathname;

// 1. LISTA NEGRA: Páginas donde NO quieres el menú
// Como tienes la carpeta [lang], usamos 'includes' para detectar la página
// sin importar el idioma (/es/cuerdas, /en/cuerdas, etc.)
const rutasOcultas = ['cuerdas', 'otra-pagina-si-quieres'];

const debeOcultarse = rutasOcultas.some(ruta => currentPath.includes(ruta));
---

{ !debeOcultarse && (

<div class="mobile-app-dock">
  
  <a href="/" class={`dock-item ${currentPath === '/' ? 'active' : ''}`} aria-label="Inicio">
    <div class="icon-container">
       <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><polygon points="16.24 7.76 14.12 14.12 7.76 16.24 9.88 9.88 16.24 7.76"></polygon></svg>
    </div>
  </a>

  <a href="/productos" class={`dock-item ${currentPath.includes('productos') ? 'active' : ''}`} aria-label="Productos">
    <div class="icon-container">
       <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="3" width="7" height="7"></rect><rect x="14" y="3" width="7" height="7"></rect><rect x="14" y="14" width="7" height="7"></rect><rect x="3" y="14" width="7" height="7"></rect></svg>
    </div>
  </a>

  <a href="https://wa.me/521234567890" target="_blank" class="dock-item" aria-label="WhatsApp">
    <div class="icon-container">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path></svg>
    </div>
  </a>

  <a href="javascript:history.back()" class="dock-item" aria-label="Regresar">
    <div class="icon-container">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 14 4 9 9 4"></polyline><path d="M20 20v-7a4 4 0 0 0-4-4H4"></path></svg>
    </div>
  </a>

</div>

)}
<style>
  /* Tu CSS se queda exactamente igual, no necesitas tocarlo */
  .mobile-app-dock {
    display: none;
  }
  @media screen and (max-width: 1024px) {
    /* ... resto de tu CSS ... */
    .mobile-app-dock {
        /* Asegúrate de copiar todo tu CSS aquí */
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        align-items: center;
        justify-items: center;
        position: fixed;
        bottom: 25px; 
        left: 50%;
        transform: translateX(-50%);
        width: calc(100% - 40px);
        max-width: 450px; 
        height: 75px;     
        background: #ffffff;
        border-radius: 40px; 
        box-shadow: 0 20px 40px rgba(0,0,0,0.1), 
                    0 0 0 1px rgba(0,0,0,0.05); 
        z-index: 9999;
        padding: 0 10px;
    }
    .dock-item {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        height: 100%;
        color: #999999; 
        transition: all 0.3s ease;
        -webkit-tap-highlight-color: transparent;
        position: relative;
    }
    .icon-container {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }
    .dock-item svg {
        width: 26px;
        height: 26px;
        stroke-width: 1.8px; 
    }
    .dock-item.active .icon-container {
        background-color: #e8f5e9; 
        transform: translateY(-5px); 
    }
    .dock-item.active svg {
        color: #006241; 
        stroke-width: 2.5px; 
    }
    .dock-item:active svg {
        transform: scale(0.9);
    }
    .dock-item.active::after {
        content: '';
        position: absolute;
        bottom: 12px;
        width: 4px;
        height: 4px;
        background-color: #006241;
        border-radius: 50%;
    }
  }
</style>