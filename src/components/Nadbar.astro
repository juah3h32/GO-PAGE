---
// src/components/Navbar.astro
import { languages, translations } from '../i18n';

interface Props {
  currentLang?: string;
}

const { currentLang = 'es' } = Astro.props;
const { pathname } = Astro.url;

// SEGURIDAD DE IDIOMAS
const safeLang = (currentLang in translations) ? currentLang : 'es';
const langData = translations[safeLang as keyof typeof translations];
const t = langData.nav;

// FUNCIÃ“N DE RUTAS
function getLangPath(targetLang: string) {
  if (pathname === '/' || pathname === '') return `/${targetLang}/`;
  const hasLangPrefix = Object.keys(languages).some(lang => pathname.startsWith(`/${lang}`));
  if (hasLangPrefix) {
    return pathname.replace(new RegExp(`^/${safeLang}`), `/${targetLang}`);
  } else {
    return `/${targetLang}${pathname}`;
  }
}
---

<header class="montfort-header transparent">
  <nav class="montfort-nav">

    <div class="nav-left">
      <div class="logo">
        <a href={`/${safeLang}/`} class="js-trigger-home">
            <img src="/images/logo/logo.png" alt="Logo" />
        </a>
      </div>
    </div>

    <div class="nav-links desktop-only">
      <a href={`/${safeLang}/`} class="nav-item js-trigger-home">{t.home}</a>
      
      <div class="nav-item has-dropdown">
        <a href={`/${safeLang}/productos`} class="nav-text-link">
          {t.products}
          <svg class="chevron" width="10" height="6" viewBox="0 0 10 6"><path d="M1 1L5 5L9 1" stroke="currentColor" stroke-width="1.5" fill="none"/></svg>
        </a>
        <div class="dropdown-menu">
           <a href={`/${safeLang}/productos`} class="dropdown-item">{t.products}</a>
           <a href={`/${safeLang}/catalogo`} class="dropdown-item">{t.catalog}</a>
           <a href={`/${safeLang}/promociones`} class="dropdown-item">{t.promos}</a>
        </div>
      </div>

      <div class="nav-item has-dropdown">
        <a href={`/${safeLang}/about`} class="nav-text-link">
          {t.about}
          <svg class="chevron" width="10" height="6" viewBox="0 0 10 6"><path d="M1 1L5 5L9 1" stroke="currentColor" stroke-width="1.5" fill="none"/></svg>
        </a>
        <div class="dropdown-menu">
          <a href={`/${safeLang}/about`} class="dropdown-item">{t.company}</a>
          <a href={`/${safeLang}/social`} class="dropdown-item">{t.social}</a>
        </div>
      </div>

      <a href={`/${safeLang}/distribuidor`} class="nav-item">{t.distributor}</a>
    </div>

    <div class="nav-right">
       
       <div class="desktop-actions desktop-only">
         
        <label class="theme-switch" aria-label="Cambiar tema">
            <div class="theme-switch-outer">
              <input id="theme-toggle" type="checkbox"> 
              <div class="theme-button">
                <span class="theme-toggle-icon"></span>
                <span class="theme-indicator"></span>
              </div>
            </div>
        </label>
         
         <div class="nav-item has-dropdown icon-only-dropdown">
            <button class="icon-btn globe-btn">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><line x1="2" y1="12" x2="22" y2="12"></line><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1 4-10z"></path></svg>
                <span>{languages[safeLang as keyof typeof languages]}</span>
            </button>
            <div class="dropdown-menu lang-menu-pos">
                {Object.entries(languages).map(([code, label]) => (
                    <a href={getLangPath(code)} class={`dropdown-item ${safeLang === code ? 'active-lang' : ''}`}>
                        {label}
                    </a>
                ))}
            </div>
        </div>

        <a href={`/${safeLang}/contacto`} class="nav-btn btn-primary">{t.contact}</a>
      </div>
      
      <div class="mobile-controls mobile-only">
         <button id="mobile-lang-trigger" class="lang-pill-btn">
             <span>{safeLang.toUpperCase()}</span>
         </button>
         <div id="mobile-lang-dropdown" class="mobile-mini-dropdown">
            {Object.entries(languages).map(([code, label]) => (
                <a href={getLangPath(code)} class={`mini-item ${safeLang === code ? 'active' : ''}`}>
                    {label}
                </a>
            ))}
         </div>
      </div>

      <button id="mobile-menu-toggle" class="hamburger mobile-only" aria-label="Menu">
        <span></span><span></span><span></span>
      </button>

    </div>
  </nav>

  <div class="mobile-menu">
      <div class="mobile-scroll-container">
        <a href={`/${safeLang}/`} class="mobile-link js-trigger-home">{t.home}</a>

        <div class="mobile-accordion">
            <button class="mobile-link accordion-btn">
                {t.products}
                <svg class="chevron" width="10" height="6" viewBox="0 0 10 6"><path d="M1 1L5 5L9 1" stroke="currentColor" stroke-width="1.5" fill="none"/></svg>
            </button>
            <div class="accordion-content">
                <a href={`/${safeLang}/productos`}>{t.products}</a>
                <a href={`/${safeLang}/catalogo`}>{t.catalog}</a>
                <a href={`/${safeLang}/promociones`}>{t.promos}</a>
            </div>
        </div>

        <div class="mobile-accordion">
            <button class="mobile-link accordion-btn">
                {t.about}
                <svg class="chevron" width="10" height="6" viewBox="0 0 10 6"><path d="M1 1L5 5L9 1" stroke="currentColor" stroke-width="1.5" fill="none"/></svg>
            </button>
            <div class="accordion-content">
                <a href={`/${safeLang}/about`}>{t.company}</a>
                <a href={`/${safeLang}/social`}>{t.social}</a>
            </div>
        </div>

        <a href={`/${safeLang}/distribuidor`} class="mobile-link">{t.distributor}</a>
        
        <div style="padding: 20px 0; border-bottom: 1px solid rgba(255,255,255,0.05); display: flex; align-items: center; justify-content: space-between;">
            <span style="color: var(--text-main)">Modo Oscuro</span>
            <label class="theme-switch" style="margin: 0;">
                <div class="theme-switch-outer">
                  <input id="mobile-theme-toggle" type="checkbox"> 
                  <div class="theme-button">
                    <span class="theme-toggle-icon"></span>
                    <span class="theme-indicator"></span>
                  </div>
                </div>
            </label>
        </div>

        <a href={`/${safeLang}/contacto`} class="nav-btn btn-primary full-width" style="margin-top: 20px;">{t.contact}</a>
      </div>
  </div>
</header>

<script>
  function initNavbar() {
    const header = document.querySelector('.montfort-header');
    const mobileToggle = document.getElementById("mobile-menu-toggle");
    const mobileMenu = document.querySelector(".mobile-menu");
    const accordions = document.querySelectorAll(".accordion-btn");
    const langTrigger = document.getElementById("mobile-lang-trigger");
    const langDropdown = document.getElementById("mobile-lang-dropdown");

    const themeInputs = document.querySelectorAll('#theme-toggle, #mobile-theme-toggle');
    
    const applyTheme = (isDark: boolean) => {
      if (isDark) {
        document.documentElement.classList.add('dark');
        localStorage.setItem('theme', 'dark');
        themeInputs.forEach(input => {
            if (input instanceof HTMLInputElement) input.checked = true;
        });
      } else {
        document.documentElement.classList.remove('dark');
        localStorage.setItem('theme', 'light');
        themeInputs.forEach(input => {
            if (input instanceof HTMLInputElement) input.checked = false;
        });
      }
    };

    const storedTheme = localStorage.getItem('theme');
    const systemDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
    
    if (storedTheme === 'dark' || (!storedTheme && systemDark)) {
       applyTheme(true);
    } else {
       applyTheme(false);
    }

    themeInputs.forEach(input => {
        const newInput = input.cloneNode(true);
        input.parentNode?.replaceChild(newInput, input);
        
        newInput.addEventListener('change', (e) => {
             const target = e.target as HTMLInputElement;
             applyTheme(target.checked);
        });
    });

    window.addEventListener('scroll', () => {
        if (window.scrollY > 50) {
            header?.classList.add('scrolled');
            header?.classList.remove('transparent');
        } else {
            header?.classList.remove('scrolled');
            header?.classList.add('transparent');
        }
    });
  
    if (mobileToggle && mobileMenu) {
      mobileToggle.addEventListener("click", () => {
        mobileMenu.classList.toggle("active");
        mobileToggle.classList.toggle("active");
        document.body.classList.toggle("no-scroll");
      });
    }
  
    if (langTrigger && langDropdown) {
        langTrigger.addEventListener("click", (e: Event) => {
            e.stopPropagation(); 
            langDropdown.classList.toggle("active");
        });
        document.addEventListener("click", (e: Event) => {
            const target = e.target;
            if (target instanceof Node && !langTrigger.contains(target) && !langDropdown.contains(target)) {
                langDropdown.classList.remove("active");
            }
        });
    }
  
    accordions.forEach(acc => {
        acc.addEventListener("click", (e: Event) => {
            const btn = e.currentTarget; 
            if (btn instanceof HTMLElement) {
               btn.classList.toggle("active");
               const panel = btn.nextElementSibling;
               if (panel instanceof HTMLElement) {
                   if (panel.style.maxHeight) {
                       panel.style.maxHeight = ''; 
                   } else {
                       panel.style.maxHeight = panel.scrollHeight + "px";
                   }
               }
            }
        });
    });
  }
  
  document.addEventListener('DOMContentLoaded', initNavbar);
  document.addEventListener('astro:page-load', initNavbar);
</script>

<style>
/* ... TUS ESTILOS IGUAL QUE ANTES ... */
:root {
  --btn-bg: #ff6600; 
  --btn-text: #fff;
  --header-bg-scrolled: rgba(15, 15, 15, 0.95);
  --text-main: #000000;
  --text-muted: #cccccc;
  --header-height: 80px;
  --max-width: 1600px;
}
* { box-sizing: border-box; margin: 0; padding: 0; font-family: 'Poppins', sans-serif; }

:global(html.dark) {
  --text-main: #ffffff;
}
body.no-scroll { overflow: hidden; }

.montfort-header {
  position: fixed; top: 0; left: 0; width: 100%;
  height: var(--header-height); z-index: 1000;
  transition: all 0.4s ease; padding-top: 25px;
}
.montfort-header.transparent { background: transparent; box-shadow: none; }
.montfort-header.scrolled {
   background: var(--header-bg-scrolled);
   padding-top: 0;
   box-shadow: 0 4px 20px rgba(0,0,0,0.5);
}

.montfort-nav {
  max-width: var(--max-width); margin: 0 auto;
  height: 100%; padding: 0 30px;
  display: flex; justify-content: space-between; align-items: center;
}

.logo img { height: 45px; width: auto; transition: transform 0.3s; }
.logo img:hover { transform: scale(1.05); }

.nav-links { display: flex; gap: 40px; align-items: center; }
.nav-item, .nav-text-link {
  position: relative;
  color: var(--text-main); text-decoration: none;
  font-size: 13.5px; font-weight: 600; letter-spacing: 1px;
  text-transform: uppercase; display: flex; align-items: center; gap: 6px;
  padding: 10px 0; transition: color 0.3s ease;
}
.nav-item::after {
  content: ""; position: absolute; bottom: 0; left: 0;
  width: 0; height: 2px; background: var(--btn-bg); transition: width 0.3s ease;
}
.nav-item:hover, .nav-text-link:hover { color: var(--btn-bg); }
.nav-item:hover::after { width: 100%; }

.btn-primary {
  background-color: var(--btn-bg); color: var(--btn-text);
  font-size: 13.5px; font-weight: 600; height: 42px; padding: 0 24px;
  border-radius: 50px; display: inline-flex; align-items: center; justify-content: center;
  text-decoration: none; border: none; cursor: pointer; line-height: 1;
  transition: all 0.3s ease; box-shadow: 0 4px 15px rgba(255, 102, 0, 0.3);
}
.btn-primary:hover {
  background-color: #e65c00; transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(255, 102, 0, 0.5);
}

.nav-right, .desktop-actions { display: flex; align-items: center; gap: 20px; }

.globe-btn {
  background-color: var(--btn-bg); color: #fff;
  border: none; cursor: pointer; height: 42px;
  padding: 0 20px; border-radius: 50px; display: flex;
  align-items: center; gap: 8px; font-family: inherit;
  transition: all 0.3s ease; box-shadow: 0 4px 15px rgba(255, 102, 0, 0.3);
}
.globe-btn span {
    font-size: 13.5px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px;
}
.globe-btn:hover { 
    background-color: #e65c00; transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(255, 102, 0, 0.5);
}

.has-dropdown { position: relative; height: 100%; display: flex; align-items: center; }
.dropdown-menu {
  position: absolute; top: 70px; left: 50%; transform: translateX(-50%) translateY(10px);
  background: #1a1a1a; border: 1px solid rgba(255,255,255,0.1);
  border-radius: 12px; padding: 10px; min-width: 200px;
  opacity: 0; visibility: hidden; transition: all 0.25s ease;
  box-shadow: 0 10px 40px rgba(0,0,0,0.5); z-index: 100;
}
.has-dropdown:hover .dropdown-menu { opacity: 1; visibility: visible; transform: translateX(-50%) translateY(0); }
.dropdown-item {
  display: block; color: var(--text-muted); padding: 10px 15px;
  text-decoration: none; font-size: 13.5px; border-radius: 6px; transition: 0.2s;
}
.dropdown-item:hover { background: rgba(255,255,255,0.05); color: var(--btn-bg); }
.active-lang { color: var(--btn-bg); font-weight: bold; }

.hamburger {
  display: none; flex-direction: column; justify-content: space-between;
  width: 28px; height: 20px; background: none; border: none; cursor: pointer; padding: 0;
  z-index: 1200;
}
.hamburger span {
  display: block; width: 100%; height: 3px; background: var(--text-main);
  border-radius: 2px; transition: 0.3s;
}
.hamburger.active span:nth-child(1) { transform: rotate(45deg) translateY(8px); background: var(--btn-bg); }
.hamburger.active span:nth-child(2) { opacity: 0; }
.hamburger.active span:nth-child(3) { transform: rotate(-45deg) translateY(-8px); background: var(--btn-bg); }

.mobile-menu {
  position: fixed; top: 0; right: 0; width: 100%; height: 100vh;
  background: #121212;
  padding-top: 100px; padding-left: 30px; padding-right: 30px;
  transform: translateX(100%); transition: transform 0.3s ease-in-out;
  z-index: 1100; display: flex; flex-direction: column;
}
.mobile-menu.active { transform: translateX(0); }
.mobile-scroll-container { overflow-y: auto; height: 100%; padding-bottom: 40px; }
.mobile-link {
  display: block; font-size: 18px; color: var(--text-main); text-decoration: none;
  padding: 18px 0; border-bottom: 1px solid rgba(255,255,255,0.05);
  font-weight: 500; text-align: left; width: 100%; background: none; border: none;
}
.accordion-btn { display: flex; justify-content: space-between; align-items: center; }
.accordion-btn.active { color: var(--btn-bg); border-bottom-color: transparent; }
.accordion-btn.active .chevron { transform: rotate(180deg); }
.accordion-content {
  max-height: 0; overflow: hidden; transition: max-height 0.3s ease-out;
  background: rgba(255, 255, 255, 0.03); padding-left: 15px; border-radius: 8px;
}
.accordion-content a { display: block; padding: 12px 0; color: #999; text-decoration: none; font-size: 15px; }
.accordion-content a:hover { color: var(--btn-bg); }

.mobile-controls { position: relative; margin-right: 15px; display: none; align-items: center; }

.lang-pill-btn {
  background-color: var(--btn-bg); color: #fff; border: none;
  border-radius: 50px; padding: 8px 16px; display: flex; align-items: center;
  gap: 8px; font-size: 14px; font-weight: 600; cursor: pointer;
  box-shadow: 0 4px 10px rgba(255, 102, 0, 0.3); transition: transform 0.2s ease;
}
.mobile-mini-dropdown {
  position: absolute; top: 120%; right: 0; background: #222;
  border: 1px solid rgba(255,255,255,0.1); border-radius: 8px; padding: 5px; width: 120px;
  opacity: 0; visibility: hidden; transform: translateY(-10px); transition: all 0.3s ease;
  box-shadow: 0 5px 15px rgba(0,0,0,0.5); display: flex; flex-direction: column;
}
.mobile-mini-dropdown.active { opacity: 1; visibility: visible; transform: translateY(0); }
.mini-item {
  color: #ccc; text-decoration: none; padding: 8px 12px;
  font-size: 14px; border-radius: 4px; text-align: center;
}

@media (max-width: 1024px) {
  .desktop-only { display: none !important; }
  .mobile-only { display: block !important; display: flex !important; }
  .hamburger { display: flex; }
  .nav-right { display: flex; align-items: center; }
}

.theme-switch { display: flex; align-items: center; justify-content: center; margin: 0; height: 45px; cursor: pointer; }
.theme-switch .theme-switch-outer {
    height: 100%; background: #262626; width: 90px; border-radius: 165px;
    box-shadow: inset 0px 5px 10px 0px #1a1a1a, 0px 3px 6px -2px #403f4e;
    border: 1px solid #32303e; padding: 6px; box-sizing: border-box; cursor: pointer; position: relative;
    display: flex; align-items: center;
}
.theme-switch .theme-switch-outer input[type="checkbox"] { opacity: 0; appearance: none; position: absolute; width: 100%; height: 100%; cursor: pointer; z-index: 10; margin: 0; }
.theme-switch .theme-switch-outer .theme-button { 
    width: 100%; height: 100%; display: flex; position: relative; pointer-events: none; 
}
.theme-switch .theme-switch-outer .theme-toggle-icon {
    height: 30px; width: 30px; background: #ffffff;
    border-radius: 100%; box-shadow: 0px 4px 15px 0px #0f0e17;
    position: absolute; z-index: 2; transition: left 0.3s ease-in; left: 0; top: 0;
}
.theme-switch .theme-switch-outer input[type="checkbox"]:checked ~ .theme-button .theme-toggle-icon { left: calc(100% - 30px); }
.theme-switch .theme-switch-outer input[type="checkbox"]:checked ~ .theme-button .theme-indicator { animation: theme-indicator 1s forwards; }

.theme-switch .theme-switch-outer .theme-indicator {
    height: 24px; width: 24px; top: 50%; transform: translateY(-50%); border-radius: 50%;
    border: 2px solid var(--btn-bg); box-sizing: border-box; right: 5px; position: absolute;
    opacity: 0;
}
@keyframes theme-indicator {
    0% { opacity: 0; } 50% { opacity: 1; } 100% { opacity: 0; }
}

[dir="rtl"] .nav-links { flex-direction: row-reverse; }
[dir="rtl"] .mobile-mini-dropdown { left: 0; right: auto; }
</style>