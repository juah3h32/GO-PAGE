/* THEME SWITCH (Tu CSS intacto) */
.theme-switch { display: flex; align-items: center; justify-content: center; margin: 0; height: 45px; }
.theme-switch .theme-switch-outer {
    height: 100%; background: #262626; width: 115px; border-radius: 165px;
