            <div class="accordion-content">
                <a href={`/${currentLang}/productos`}>{t.products}</a>
                <a href={`/${currentLang}/catalogo`}>{t.catalog}</a>
                <a href={`/${currentLang}/promociones`}>{t.promos}</a>
