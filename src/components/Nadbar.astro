// src/components/Navbar.astro
import { languages, translations } from '../i18n/translations';

interface Props {
  currentLang?: string; // Lo hacemos opcional (?) para evitar errores de tipo
}

// 1. SOLUCIÓN DEL ERROR: Asignamos 'es' por defecto si currentLang no llega
const { currentLang = 'es' } = Astro.props;
const { pathname } = Astro.url;

// 2. SELECCIÓN DE TRADUCCIONES
// Buscamos el idioma, si no existe usamos 'es'
const langData = translations[currentLang as keyof typeof translations] || translations['es'];

// 3. SELECCIÓN DE TEXTOS DEL NAVBAR
// Accedemos a la propiedad .nav que definiste en tu archivo translations.ts
const t = langData.nav; 

// FUNCIÓN DE RUTAS (Se mantiene igual, pero ahora es segura gracias al valor por defecto)
function getLangPath(targetLang: string) {
  if (pathname === '/' || pathname === '') return `/${targetLang}/`;
  const hasLangPrefix = Object.keys(languages).some(lang => pathname.startsWith(`/${lang}`));

  if (hasLangPrefix) {
    // Usamos currentLang, que ahora garantizamos que tiene valor (ej: 'es')
    return pathname.replace(new RegExp(`^/${currentLang}`), `/${targetLang}`);
  } else {
    return `/${targetLang}${pathname}`;
  }
}
