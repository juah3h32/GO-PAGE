</header>

<script>
  function initNavbar() {
    const header = document.querySelector('.montfort-header');
    const mobileToggle = document.getElementById("mobile-menu-toggle");
    const mobileMenu = document.querySelector(".mobile-menu");
    const accordions = document.querySelectorAll(".accordion-btn");
    const langTrigger = document.getElementById("mobile-lang-trigger");
    const langDropdown = document.getElementById("mobile-lang-dropdown");
    const themeInputs = document.querySelectorAll('#theme-toggle');
    
    // Theme logic
    const applyTheme = (isDark: boolean) => {
      if (isDark) {
        document.documentElement.classList.add('dark');
        localStorage.setItem('theme', 'dark');
        themeInputs.forEach(input => { if(input instanceof HTMLInputElement) input.checked = true; });
      } else {
        document.documentElement.classList.remove('dark');
        localStorage.setItem('theme', 'light');
        themeInputs.forEach(input => { if(input instanceof HTMLInputElement) input.checked = false; });
      }
    };
    const storedTheme = localStorage.getItem('theme');
    const systemDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
    if (storedTheme === 'dark' || (!storedTheme && systemDark)) applyTheme(true);
    else applyTheme(false);

    themeInputs.forEach(input => {
        const newInput = input.cloneNode(true);
        input.parentNode?.replaceChild(newInput, input);
        newInput.addEventListener('change', (e) => applyTheme((e.target as HTMLInputElement).checked));
    });

    // Scroll Logic (Mantiene fondo transparente al inicio)
    window.addEventListener('scroll', () => {
        if (window.scrollY > 50) {
            header?.classList.add('scrolled');
            header?.classList.remove('transparent');
        } else {
            header?.classList.remove('scrolled');
            header?.classList.add('transparent');
        }
    });
  
    if (mobileToggle && mobileMenu) {
      mobileToggle.addEventListener("click", () => {
        mobileMenu.classList.toggle("active");
        mobileToggle.classList.toggle("active");
        document.body.classList.toggle("no-scroll");
      });
    }
  
    if (langTrigger && langDropdown) {
        langTrigger.addEventListener("click", (e) => {
            e.stopPropagation(); 
            langDropdown.classList.toggle("active");
        });
        document.addEventListener("click", (e) => {
            if (e.target instanceof Node && !langTrigger.contains(e.target) && !langDropdown.contains(e.target)) {
                langDropdown.classList.remove("active");
            }
        });
    }
  
    accordions.forEach(acc => {
        acc.addEventListener("click", (e) => {
            const btn = e.currentTarget as HTMLElement;
            btn.classList.toggle("active");
            const panel = btn.nextElementSibling as HTMLElement;
            if (panel.style.maxHeight) panel.style.maxHeight = ''; 
            else panel.style.maxHeight = panel.scrollHeight + "px";
        });
    });
  }
  
  document.addEventListener('DOMContentLoaded', initNavbar);
  document.addEventListener('astro:page-load', initNavbar);
</script>

<style>
/* FUENTES Y VARIABLES */
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Poppins:wght@400;500;600;700&display=swap');

:root {
  --btn-bg: #fb670b; 
  --btn-glow: rgba(251, 103, 11, 0.6);
  --btn-text: #fff;
  --header-bg-scrolled: rgba(15, 15, 15, 0.95);
  --text-main: #000000;
  --text-muted: #cccccc;
  --header-height: 80px;
  --max-width: 1600px;
}
* { box-sizing: border-box; margin: 0; padding: 0; font-family: 'Poppins', sans-serif; }

:global(html.dark) {
  --text-main: #ffffff;
}
body.no-scroll { overflow: hidden; }

/* HEADER & LAYOUT */
.montfort-header {
  z-index: 3000 !important;
  position: fixed; top: 0; left: 0; width: 100%;
  height: var(--header-height);
  transition: all 0.4s ease; padding-top: 25px;
}
.montfort-header.transparent { background: transparent; box-shadow: none; }

/* Estado con Scroll: Fondo oscuro */
.montfort-header.scrolled {
   background: var(--header-bg-scrolled);
   padding-top: 0;
   box-shadow: 0 4px 20px rgba(0,0,0,0.5);
   backdrop-filter: blur(10px); /* Añadido un poco de blur al fondo oscuro */
}

.montfort-nav {
  max-width: var(--max-width); margin: 0 auto;
  height: 100%; padding: 0 30px;
  display: flex; justify-content: space-between; align-items: center;
}

.logo img { height: 45px; width: auto; transition: transform 0.3s; }
.logo img:hover { transform: scale(1.05); }

/* --- AQUÍ ESTÁ LA MAGIA DEL NAV --- */
.nav-links { display: flex; gap: 40px; align-items: center; }

.nav-item, .nav-text-link {
  position: relative;
  color: var(--text-main); text-decoration: none;
  font-size: 13.5px; font-weight: 600; letter-spacing: 0.5px;
  text-transform: uppercase; display: flex; align-items: center; gap: 6px;
  padding: 10px 0; 
  transition: all 0.3s ease;
  cursor: pointer;
}

/* 1. Animación del TEXTO (Flotar + Brillo) */
.nav-text {
  position: relative;
  transition: transform 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275), 
              text-shadow 0.3s ease;
  z-index: 2;
}

/* 2. La Barra "Laser" (Reemplaza al underline simple) */
.nav-glow {
  position: absolute;
  bottom: -2px;
  left: 50%;
  width: 0;
  height: 2px;
  background: var(--btn-bg);
  box-shadow: 0 0 10px var(--btn-bg), 0 0 20px var(--btn-bg); /* Efecto Neón */
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  transform: translateX(-50%);
  opacity: 0;
  z-index: 1;
}

/* ESTADO HOVER */
.nav-item:hover .nav-text, 
.nav-text-link:hover .nav-text {
  color: var(--btn-bg);
  transform: translateY(-2px); /* Flota hacia arriba */
  text-shadow: 0 0 15px var(--btn-glow); /* Texto resplandeciente */
}

.nav-item:hover .nav-glow,
.nav-text-link:hover ~ .nav-glow { /* Selector ajustado para dropdown */
  width: 100%;
  opacity: 1;
}

/* ESTADO ACTIVE (Página actual) */
.nav-item.active .nav-text {
  color: var(--btn-bg);
  font-weight: 700;
  text-shadow: 0 0 10px rgba(251, 103, 11, 0.4);
}
.nav-item.active .nav-glow {
  width: 60%; /* La barra activa es un poco más corta pero permanente */
  opacity: 1;
  bottom: -4px;
}

/* Chevron animado */
.chevron { transition: transform 0.3s ease; }
.has-dropdown:hover .chevron { transform: rotate(180deg); color: var(--btn-bg); }


/* BOTONES CON EFECTO 3D SUTIL */
.btn-primary {
  background-color: var(--btn-bg); color: var(--btn-text);
  font-size: 13.5px; font-weight: 600; height: 42px; padding: 0 24px;
  border-radius: 50px; display: inline-flex; align-items: center; justify-content: center;
  text-decoration: none; border: none; cursor: pointer; line-height: 1;
  transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275); /* Rebote elástico */
  box-shadow: 0 4px 15px rgba(255, 102, 0, 0.3);
  transform-style: preserve-3d;
}
.btn-primary:hover {
  background-color: #fb670b; 
  transform: translateY(-2px) scale(1.03); /* Crece y sube */
  box-shadow: 0 8px 25px rgba(255, 102, 0, 0.6); /* Sombra más intensa */
}
.btn-primary:active {
  transform: translateY(1px) scale(0.98); /* Efecto click */
}

/* Dropdown Styles */
.has-dropdown { position: relative; height: 100%; display: flex; align-items: center; }
.dropdown-menu {
  position: absolute; top: 60px; left: 50%; transform: translateX(-50%) translateY(15px);
  background: rgba(20, 20, 20, 0.95); /* Fondo oscuro semitransparente */
  backdrop-filter: blur(12px); /* Blur real */
  border: 1px solid rgba(255,255,255,0.1);
  border-radius: 12px; padding: 10px; min-width: 200px;
  opacity: 0; visibility: hidden; 
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 10px 40px rgba(0,0,0,0.5); z-index: 100;
}
/* Triangulito decorativo arriba del menu */
.dropdown-menu::before {
    content: ''; position: absolute; top: -6px; left: 50%; margin-left: -6px;
    border-width: 0 6px 6px 6px; border-style: solid;
    border-color: transparent transparent rgba(255,255,255,0.1) transparent;
}

.has-dropdown:hover .dropdown-menu { 
    opacity: 1; visibility: visible; 
    transform: translateX(-50%) translateY(0); 
}

.dropdown-item {
  display: block; color: #aaa; padding: 10px 15px;
  text-decoration: none; font-size: 13.5px; border-radius: 6px; 
  transition: all 0.2s;
  position: relative; overflow: hidden;
}
.dropdown-item:hover { 
    background: rgba(255,255,255,0.05); 
    color: var(--btn-bg); 
    padding-left: 20px; /* Desplazamiento sutil a la derecha */
}


/* RESTO DEL CSS (Theme Switch, Mobile, etc.) MANTENIDO IGUAL */
.nav-right, .desktop-actions { display: flex; align-items: center; gap: 20px; }

.globe-btn {
  background-color: var(--btn-bg); color: #fff;
  border: none; cursor: pointer; height: 42px;
  padding: 0 20px; border-radius: 50px; display: flex;
  align-items: center; gap: 8px; font-family: inherit;
  transition: all 0.3s ease; box-shadow: 0 4px 15px rgba(255, 102, 0, 0.3);
}
.globe-btn span { font-size: 13.5px; font-weight: 600; text-transform: uppercase; }
.globe-btn:hover { transform: translateY(-2px); box-shadow: 0 6px 20px rgba(255, 102, 0, 0.5); }

.hamburger {
  display: none; flex-direction: column; justify-content: space-between;
  width: 28px; height: 20px; background: none; border: none; cursor: pointer; padding: 0;
  z-index: 1200;
}
.hamburger span {
  display: block; width: 100%; height: 3px; background: var(--text-main);
  border-radius: 2px; transition: 0.3s;
}
.hamburger.active span:nth-child(1) { transform: rotate(45deg) translateY(8px); background: var(--btn-bg); }
.hamburger.active span:nth-child(2) { opacity: 0; }
.hamburger.active span:nth-child(3) { transform: rotate(-45deg) translateY(-8px); background: var(--btn-bg); }

.mobile-menu {
  position: fixed; top: 0; right: 0; width: 100%; height: 100vh;
  background: #121212;
  padding-top: 100px; padding-left: 30px; padding-right: 30px;
  transform: translateX(100%); transition: transform 0.3s ease-in-out;
  z-index: 1100; display: flex; flex-direction: column;
}
.mobile-menu.active { transform: translateX(0); }
.mobile-scroll-container { overflow-y: auto; height: 100%; padding-bottom: 40px; }
.mobile-link {
  display: block; font-size: 18px; color: var(--text-main); text-decoration: none;
  padding: 18px 0; border-bottom: 1px solid rgba(255,255,255,0.05);
  font-weight: 500; text-align: left; width: 100%; background: none; border: none;
}
.accordion-btn { display: flex; justify-content: space-between; align-items: center; }
.accordion-btn.active { color: var(--btn-bg); border-bottom-color: transparent; }
.accordion-btn.active .chevron { transform: rotate(180deg); }
.accordion-content {
  max-height: 0; overflow: hidden; transition: max-height 0.3s ease-out;
  background: rgba(255, 255, 255, 0.03); padding-left: 15px; border-radius: 8px;
}
.accordion-content a { display: block; padding: 12px 0; color: #999; text-decoration: none; font-size: 15px; }
.accordion-content a:hover { color: var(--btn-bg); }

.mobile-controls { position: relative; margin-right: 15px; display: none; align-items: center; }

.lang-pill-btn {
  background-color: var(--btn-bg); color: #fff; border: none;
  border-radius: 50px; padding: 8px 16px; display: flex; align-items: center;
  gap: 8px; font-size: 14px; font-weight: 600; cursor: pointer;
  box-shadow: 0 4px 10px rgba(255, 102, 0, 0.3);
}
.mobile-mini-dropdown {
  position: absolute; top: 120%; right: 0; background: #222;
  border: 1px solid rgba(255,255,255,0.1); border-radius: 8px; padding: 5px; width: 120px;
  opacity: 0; visibility: hidden; transform: translateY(-10px); transition: all 0.3s ease;
  box-shadow: 0 5px 15px rgba(0,0,0,0.5); display: flex; flex-direction: column;
}
.mobile-mini-dropdown.active { opacity: 1; visibility: visible; transform: translateY(0); }
.mini-item {
  color: #ccc; text-decoration: none; padding: 8px 12px;
  font-size: 14px; border-radius: 4px; text-align: center;
}

@media (max-width: 1024px) {
  .desktop-only { display: none !important; }
  .mobile-only { display: block !important; display: flex !important; }
  .hamburger { display: flex; }
  .nav-right { display: flex; align-items: center; }
