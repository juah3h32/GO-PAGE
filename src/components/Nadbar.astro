<script>
  function initNavbar() {
    const header = document.querySelector('.montfort-header');
    const mobileToggle = document.getElementById("mobile-menu-toggle");
    const mobileMenu = document.querySelector(".mobile-menu");
    const accordions = document.querySelectorAll(".accordion-btn");
    
    const langTrigger = document.getElementById("mobile-lang-trigger");
    const langDropdown = document.getElementById("mobile-lang-dropdown");
  
    // 1. Scroll
    window.addEventListener('scroll', () => {
        if (window.scrollY > 50) {
            header?.classList.add('scrolled');
            header?.classList.remove('transparent');
        } else {
            header?.classList.remove('scrolled');
            header?.classList.add('transparent');
        }
    });
  
    // 2. Hamburguesa
    if (mobileToggle && mobileMenu) {
      mobileToggle.addEventListener("click", () => {
        mobileMenu.classList.toggle("active");
        mobileToggle.classList.toggle("active");
        document.body.classList.toggle("no-scroll");
      });
    }
  
    // 3. Dropdown de Idioma Móvil
    if (langTrigger && langDropdown) {
        // CORRECCIÓN 1: Añadido ': Event'
        langTrigger.addEventListener("click", (e: Event) => {
            e.stopPropagation(); 
            langDropdown.classList.toggle("active");
        });
  
        // CORRECCIÓN 2: Añadido ': Event'
        document.addEventListener("click", (e: Event) => {
            const target = e.target;
            if (target instanceof Node && !langTrigger.contains(target) && !langDropdown.contains(target)) {
                langDropdown.classList.remove("active");
            }
        });
    }
  
    // 4. Acordeones
    accordions.forEach(acc => {
        // CORRECCIÓN 3: Añadido ': Event'
        acc.addEventListener("click", (e: Event) => {
            const btn = e.currentTarget; 
            if (btn instanceof HTMLElement) {
               btn.classList.toggle("active");
               const panel = btn.nextElementSibling;
               if (panel instanceof HTMLElement) {
                   if (panel.style.maxHeight) {
                       panel.style.maxHeight = ''; 
                   } else {
                       panel.style.maxHeight = panel.scrollHeight + "px";
                   }
               }
            }
        });
    });
  
    // 5. Sincronización Switch
    const themeMain = document.getElementById('theme-toggle');
    const themeMobile = document.getElementById('theme-toggle-mobile');
  
    // CORRECCIÓN 4: Añadido ': Event'
    function syncSwitches(e: Event) {
        const target = e.target;
        if (target instanceof HTMLInputElement) {
            const isChecked = target.checked;
            if (themeMain instanceof HTMLInputElement) themeMain.checked = isChecked;
            if (themeMobile instanceof HTMLInputElement) themeMobile.checked = isChecked;
        }
    }
  
    if (themeMain) themeMain.addEventListener('change', syncSwitches);
    if (themeMobile) themeMobile.addEventListener('change', syncSwitches);
  }
  
  document.addEventListener('DOMContentLoaded', initNavbar);
  document.addEventListener('astro:page-load', initNavbar);
</script>

