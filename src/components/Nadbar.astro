<script>
// LÓGICA JAVASCRIPT (ISLAS)
function initNavbar() {
  const currentPath = window.location.pathname;

  // 1. Marcar links activos
  const links = document.querySelectorAll(
    ".nav-item[href], .dropdown-item[href], .nav-text-link[href], .mobile-menu .nav-item[href]"
  );
  links.forEach(link => {
    const href = link.getAttribute("href");
    if (!href || href === "#") return;
    // Lógica simple: si la url es igual al href
    if (href === currentPath || (href !== '/' && currentPath.startsWith(href))) {
      link.classList.add("active");
      const dropdownParent = link.closest(".has-dropdown");
      if (dropdownParent) dropdownParent.classList.add("active");
    }
  });

  // 2. Hamburguesa Móvil
  const mobileToggle = document.getElementById("mobile-menu-toggle");
  const mobileMenu = document.querySelector(".mobile-menu");
  const hamburger = document.querySelector(".hamburger");

  if (mobileToggle && mobileMenu) {
    mobileToggle.addEventListener("click", () => {
      mobileMenu.classList.toggle("active");
      mobileToggle.classList.toggle("active"); // Para animar la cruz
    });

    // Cerrar al redimensionar
    window.addEventListener("resize", () => {
      if (window.innerWidth > 1024) { 
        mobileMenu.classList.remove("active");
        mobileToggle.classList.remove("active");
      }
    });
  }

  // 3. Efecto Scroll Header
  const header = document.querySelector('.montfort-header');
  window.addEventListener('scroll', () => {
      if (window.scrollY > 50) {
          header?.classList.add('scrolled');
          header?.classList.remove('transparent');
      } else {
          header?.classList.remove('scrolled');
          header?.classList.add('transparent');
      }
  });
}

// Inicializar en carga de Astro
document.addEventListener('astro:page-load', initNavbar);
document.addEventListener('DOMContentLoaded', initNavbar);
</script>

<style>
/* =====================================================
