        .form-cta p { color: var(--text-gray); font-size: 1.1rem; }

        .form-inputs { padding: 60px; background: #080808; }
        .input-row { display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 25px; }
        .field-group label { display: block; color: #666; font-size: 0.8rem; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 10px; font-weight: 700; }
        .field-group input {
