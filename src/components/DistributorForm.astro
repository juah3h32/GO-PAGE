            mask-image: linear-gradient(to bottom, black 85%, transparent 100%);
            -webkit-mask-image: linear-gradient(to bottom, black 85%, transparent 100%);
            animation: floatHero 6s ease-in-out infinite;
        }
        @keyframes floatHero {
            0%, 100% { transform: translateY(0); } 50% { transform: translateY(-20px); }
        }

        /* CARDS GRID */
        .grid-features {
            display: grid; grid-template-columns: repeat(4, 1fr); gap: 25px;
            margin-bottom: 120px;
        }
        .card {
            background: rgba(20, 20, 20, 0.6); backdrop-filter: blur(10px);
            padding: 45px 35px; border-radius: 4px;
            border-top: 1px solid rgba(255,255,255,0.05);
            border-bottom: 1px solid rgba(255,255,255,0.05);
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            display: flex; flex-direction: column; justify-content: flex-start;
            position: relative; overflow: hidden;
        }
        .card::before {
            content: ''; position: absolute; left: 0; top: 0; bottom: 0; width: 3px;
            background: var(--primary); transform: scaleY(0); transition: 0.3s;
        }
        .card:hover::before { transform: scaleY(1); }
        .card:hover { transform: translateY(-10px); background: rgba(30, 30, 30, 0.8); }
        
        .icon-box { font-size: 2.5rem; margin-bottom: 25px; color: var(--text-gray); transition: 0.3s; }
        .card:hover .icon-box { color: var(--primary); transform: scale(1.1); }
        
        .card h3 { 
            font-family: var(--font-display); /* Morganite */
