    <style>
        /* =========================================
           1. REGISTRO DE FUENTES (DEL CÓDIGO 2)
           ========================================= */
        @font-face {
            font-family: 'MorganitePro';
            src: url('../fonts/MorganitePro-ExtraBold.ttf') format('truetype');
            font-weight: 800;
            font-style: normal;
            font-display: swap;
        }

        @font-face {
            font-family: 'NeueMontreal';
            src: url('../fonts/NeueMontreal-Medium.otf') format('opentype');
            font-weight: 500;
            font-style: normal;
            font-display: swap;
        }

        /* ================= VARIABLES GLOBALES ================= */
        :root {
            --primary: #fb670b;
            --primary-dark: #d65200;
            --bg-dark: #050505;
            --text-main: #ffffff;
            --text-muted: #a1a1aa;
            --glass-border: rgba(255, 255, 255, 0.1);

            /* ASIGNACIÓN DE FUENTES CON RESPALDO */
            /* Si no encuentra Morganite, usa Antonio. Si no, sans-serif */
            --fuente-titulos: 'MorganitePro', 'Antonio', sans-serif;
            --fuente-cuerpo: 'NeueMontreal', 'Manrope', sans-serif;
        }

        * { margin: 0; padding: 0; box-sizing: border-box; -webkit-tap-highlight-color: transparent; }

        html { scroll-behavior: smooth; }

        body {
            /* APLICAMOS LA FUENTE DE CUERPO DEL CÓDIGO 2 */
            font-family: var(--fuente-cuerpo);
            color: var(--text-main);
            overflow-x: hidden;
            position: relative;
        
        }

        /* Ocultos por defecto en PC */
        .mobile-bottom-bar { display: none; }

        /* ================= ESTILOS DE ESCRITORIO ================= */
        
        #canvas-container {
            position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: -1;
        }

        .container {
            max-width: 1400px; margin: 0 auto; padding: 0 30px; position: relative; z-index: 1;
        }

        /* HERO SECTION */
        .hero {
            display: flex; 
            flex-direction: column; 
            justify-content: center;
            min-height: 100vh; 
            padding-top: 140px; 
            padding-bottom: 20px;
            gap: 40px;
        }

        .hero-top-split {
            display: grid; 
            grid-template-columns: 1fr 1fr; 
            align-items: center;
            gap: 40px;
            flex-grow: 1; 
        }

        .hero-content { padding-right: 40px; position: relative; z-index: 10; }

        /* ESTILO DEL "TOPIC" PEQUEÑO (COMO EL CÓDIGO 2) */
        .brand-tag {
            display: inline-flex; 
            font-family: var(--fuente-titulos); /* Morganite */
            font-size: 2.5rem; /* Más grande porque la fuente es condensada */
            color: var(--primary); 
            margin-bottom: 25px; 
            text-transform: uppercase; 
            letter-spacing: 3px;
            font-weight: 600;
        }

        /* ESTILO DEL TÍTULO GIGANTE (COMO EL CÓDIGO 2) */
        .hero h1 {
            font-family: var(--fuente-titulos); /* Morganite */
            font-size: clamp(5rem, 10vw, 11rem); /* TAMAÑO GIGANTE */
            line-height: 0.85; /* MÁS PEGADO */
            font-weight: 800;
            margin-bottom: 20px; 
            color: white;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        .hero h1 span { color: var(--primary); }

        /* ESTILO DE LA DESCRIPCIÓN (COMO EL CÓDIGO 2) */
        .hero p {
            font-family: var(--fuente-cuerpo);
            font-size: 1.1rem; 
            color: var(--text-muted); 
            line-height: 1.5;
            max-width: 500px; 
            margin-bottom: 40px;
            font-weight: 400;
        }

        /* Stats */
        .stats-row {
            display: flex; gap: 60px; border-top: 1px solid var(--glass-border); padding-top: 30px;
            opacity: 0; transform: translateY(20px);
            margin-bottom: 35px;
        }
        .stat-item h3 {
            font-family: var(--fuente-cuerpo); /* Morganite para números */
            font-size: 4rem; 
            line-height: 0.9;
            font-weight: 700; color: white; margin-bottom: 5px; display: flex;
        }
        .stat-suffix { font-size: 2rem; color: var(--primary); margin-left: 2px; align-self: flex-start; margin-top: 5px;}
        .stat-item p { 
            font-family: var(--fuente-cuerpo);
            font-size: 0.8rem; text-transform: uppercase; letter-spacing: 1px; color: var(--text-muted); 
        }

        /* --- NUEVO BOTÓN HERO (ESTILO PILL) --- */
        .hero-cta-wrapper {
            opacity: 0; transform: translateY(20px);
        }
        .btn-hero-cta {
            display: inline-block;
            background: var(--primary);
            color: white;
            text-decoration: none;
            padding: 15px 45px; /* Pill shape */
            border-radius: 50px;
            font-family: var(--fuente-cuerpo);
            font-weight: 700;
            font-size: 1rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            box-shadow: 0 10px 30px rgba(251, 103, 11, 0.4);
            transition: all 0.3s ease;
            border: 1px solid transparent;
        }
        .btn-hero-cta:hover {
            background: transparent;
            color: var(--primary);
            border-color: var(--primary);
            box-shadow: 0 5px 15px rgba(251, 103, 11, 0.2);
            transform: translateY(-2px);
        }

        /* Hero Image */
        .hero-visual {
            position: relative; height: 100%; display: flex; justify-content: center; align-items: center;
        }
        .img-wrapper { position: relative; width: 100%; max-width: 600px; }
        .main-img {
            width: 140%; height: auto; margin-left: -20%;
            filter: drop-shadow(0 60px 50px rgba(0,0,0,0.7));
            animation: floatUpDown 6s ease-in-out infinite; 
            pointer-events: none;
        }
        @keyframes floatUpDown { 0%, 100% { transform: translateY(0); } 50% { transform: translateY(-30px); } }

        /* ================= MARQUEE ================= */
        .hero-marquee-section {
            width: 100vw; 
            margin-left: calc(-50vw + 50%); 
            padding: 20px 0;
            border-top: 1px solid rgba(255,255,255,0.05);
            background: rgba(0,0,0,0.2);
            overflow: hidden;
            margin-bottom: 20px;
        }

        .marquee-wrapper {
            display: flex; width: 100%;
            mask-image: linear-gradient(to right, transparent, black 5%, black 95%, transparent);
            -webkit-mask-image: linear-gradient(to right, transparent, black 5%, black 95%, transparent);
        }

        .marquee-track {
            display: flex; gap: 20px;
            width: max-content;
            animation: scroll-infinite 40s linear infinite;
            will-change: transform;
        }
        .marquee-track:hover { animation-play-state: paused; cursor: grab; }

        .info-card {
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid var(--glass-border); border-radius: 16px;
            padding: 25px 25px; display: flex; flex-direction: column; justify-content: center;
            width: 320px; height: 180px; 
            flex-shrink: 0; 
            transition: all 0.3s ease;
        }

        .info-card:hover { border-color: var(--primary); background: rgba(251, 103, 11, 0.05); transform: translateY(-3px); }
        .info-card.highlight { border: 1px solid var(--primary); background: rgba(251, 103, 11, 0.08); }
        .info-card.highlight:hover { background: var(--primary); }
        .info-card.highlight:hover h3, .info-card.highlight:hover p { color: white; }

.card-content h3 { 
    font-family: var(--fuente-titulos);
    font-size: 3.8rem; 
    text-transform: uppercase; /* <-- ESTA ES LA CORRECCIÓN */
    font-weight: 600; 
    margin-bottom: 5px; 
    color: white; 
