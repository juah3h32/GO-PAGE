            border: none; box-shadow: 0 20px 60px rgba(251, 103, 11, 0.3);
        }
        .card.highlight::before { display: none; }
        .card.highlight .icon-box, .card.highlight h3, .card.highlight p { color: white; opacity: 1; }
        .card.highlight:hover { transform: scale(1.05); }

        /* STATS */
        .stats-row {
