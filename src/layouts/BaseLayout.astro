---
// src/layouts/BaseLayout.astro

// 1. IMPORTAMOS LO NECESARIO PARA PWA
import { pwaInfo } from 'virtual:pwa-info';

// 2. Importamos componentes
import Loader from "../components/Loader.astro";
import Cursor from "../components/CustomCursor.astro";
import Navbar from '../components/Nadbar.astro'; 
import AudioVisualizer from "../components/AudioVisualizer.astro"; 
import FondoGlobal from "../components/FondoGlobal.astro";
import BotGO from "../components/BotGO.jsx";
import DockMenu from "../components/DockMenu.astro";

// Props
const { 
  title = "Mi sitio", 
  currentLang = "es", 
  moveLogoMobile = false 
} = Astro.props;
---

<!DOCTYPE html>
<html lang={currentLang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1, viewport-fit=cover" />
    <meta name="theme-color" content="#ffffff" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-title" content="GO" />
    
    <title>{title}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="/styles/theme.css" />
    <link rel="apple-touch-icon" href="/pwa-192x192.png" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    { pwaInfo && <Fragment set:html={pwaInfo.webManifest.linkTag} /> }

    <script is:inline>
      (function () {
        try {
          if (localStorage.getItem("theme") === "dark") {
            document.documentElement.classList.add("dark");
          }
        } catch (e) {}
      })();
    </script>

    <style is:global>
      /* =========================================
         VARIABLES Y ESTILOS GLOBALES
         ========================================= */
      :root {
        --body-bg: #ffffff;
        --slide-gradient: linear-gradient(
          to right,       
          #ffffff 0%,     
          #ffffff 20%,    
          #fb670b 60%,    
          #ff7a18 100%    
        );
        --thumb-bg: rgba(0, 0, 0, 0.08); 
      }

      html.dark {
        --body-bg: #111010;
        --slide-gradient: linear-gradient(
          to right,       
          #000000 0%,     
          #000000 20%,    
          #fb670b 60%,    
          #ff7a18 100%    
        );
      }

      html, body {
        margin: 0;
        padding: 0;
        width: 100%;
        min-height: 100vh;
        font-family: 'Poppins', sans-serif;
        overflow-x: hidden; 
      }

      /* ANIMACIÓN WIPE */
      @keyframes wipe-in-top-down {
        from { clip-path: polygon(0 0, 100% 0, 100% 0, 0 0); }
        to { clip-path: polygon(0 0, 100% 0, 100% 100%, 0 100%); }
      }

      /* CORTINA */
      .home-curtain {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        z-index: 99999;
        pointer-events: none;
        background: var(--slide-gradient); 
        clip-path: polygon(0 0, 100% 0, 100% 0, 0 0);
      }

      .home-curtain.active {
        pointer-events: all;
        animation: 2.5s cubic-bezier(.25, 1, .30, 1) wipe-in-top-down both;
      }
    </style>
  </head>

  <body>
    <div id="home-transition-curtain" class="home-curtain"></div>

    <FondoGlobal />
    <Cursor />
    
    <Navbar currentLang={currentLang} moveLogoMobile={moveLogoMobile} />

    <Loader />
    <div 
      id="global-audio-player" 
      transition:persist
      style="position: fixed; bottom: 30px; right: 96px; z-index: 9999;"
    >
       <AudioVisualizer />
    </div>

    <slot />
    
    <DockMenu />
   
    <BotGO client:idle language={currentLang} />

    <script>
      import { registerSW } from 'virtual:pwa-register';
      registerSW({ 
        immediate: true,
        onRegisteredSW(swUrl) {
          console.log('PWA: Service Worker activo en', swUrl);
        }
      });
    </script>

    <script src="/scripts/theme-toggle.js" defer></script>

    <script is:inline>
      window.addEventListener('load', () => {
        const loader = document.getElementById('loader-wrapper');
        if (loader) {
          loader.style.opacity = '0';
          setTimeout(() => {
            loader.style.display = 'none';
          }, 500);
        }
      });
    </script>

    <script is:inline>
      document.addEventListener('DOMContentLoaded', () => {
        const curtain = document.getElementById('home-transition-curtain');
        
        document.addEventListener('click', (e) => {
          const link = e.target.closest('a');
          if (!link) return;

          const href = link.getAttribute('href');
          const target = link.getAttribute('target'); 
          
          const isHomeLink = 
             href === '/' || 
             href === '/es' || 
             href === '/en' ||
             link.classList.contains('js-trigger-home');

          // DETECTAR SI ES MOVIL (Usamos 1024px igual que en tu CSS del DockMenu)
          const isMobile = window.matchMedia('(max-width: 1024px)').matches;

          // MODIFICAMOS EL IF:
          // Solo activamos la cortina si es HomeLink Y NO estamos en móvil (!isMobile)
          if (isHomeLink && !isMobile && !e.ctrlKey && !e.metaKey && target !== '_blank' && curtain) {
            e.preventDefault(); 
            curtain.classList.add('active');
            setTimeout(() => {
              window.location.href = href;
            }, 1900);
          }
          // Si es móvil, el código salta este bloque y hace la navegación normal instantánea.
        });
      });
    </script>
    
  </body>
</html>