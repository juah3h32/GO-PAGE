---
// src/layouts/Layout.astro

// 1. IMPORTAMOS LO NECESARIO PARA PWA
import { pwaInfo } from 'virtual:pwa-info';

// 2. Importamos componentes
import Loader from "../components/Loader.astro";
import Cursor from "../components/CustomCursor.astro";
import Navbar  from '../components/Nadbar.astro';
import AudioVisualizer from "../components/AudioVisualizer.astro"; 
import FondoGlobal from "../components/FondoGlobal.astro";
import BotGO from "../components/BotGO.jsx";
import DockMenu from "../components/DockMenu.astro";

// Props
const { title = "Mi sitio", currentLang = "es" } = Astro.props;
---

<!DOCTYPE html>
<html lang={currentLang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1, viewport-fit=cover" />
    <meta name="theme-color" content="#ffffff" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-title" content="GO" />
    
    <title>{title}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="/styles/theme.css" />
    <link rel="apple-touch-icon" href="/pwa-192x192.png" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    { pwaInfo && <Fragment set:html={pwaInfo.webManifest.linkTag} /> }

    <script is:inline>
      (function () {
        try {
          if (localStorage.getItem("theme") === "dark") {
            document.documentElement.classList.add("dark");
          }
        } catch (e) {}
      })();
    </script>

<style is:global>
  /* =========================================
     1. VARIABLES GLOBALES
     ========================================= */
  :root {
    --body-bg: #ffffff;
    
    /* Tu gradiente exacto (Modo Claro) */
    --slide-gradient: linear-gradient(
      to right,       
      #ffffff 0%,     
      #ffffff 20%,    
      #fb670b 60%,    
      #ff7a18 100%    
    );
    
    --thumb-bg: rgba(0, 0, 0, 0.08); 
  }

  html.dark {
    --body-bg: #111010;
    /* Tu gradiente exacto (Modo Oscuro) */
    --slide-gradient: linear-gradient(
      to right,       
      #000000 0%,     
      #000000 20%,    
      #fb670b 60%,    
      #ff7a18 100%    
    );
  }

  /* =========================================
     2. RESET BÁSICO
     ========================================= */
  html, body {
    margin: 0;
    padding: 0;
    width: 100%;
    min-height: 100vh;
    font-family: 'Poppins', sans-serif;
    overflow-x: hidden; 
  }

  /* =========================================
     3. ANIMACIÓN WIPE (DE ARRIBA A ABAJO)
     ========================================= */
  @keyframes wipe-in-top-down {
    from {
      /* Empieza como una línea en el techo: 
         Punto 1 y 2 (Arriba), Punto 3 y 4 (También Arriba) */
      clip-path: polygon(0 0, 100% 0, 100% 0, 0 0);
    }
    to {
      /* Termina cubriendo todo: 
         Punto 1 y 2 (Arriba), Punto 3 y 4 (Abajo) */
      clip-path: polygon(0 0, 100% 0, 100% 100%, 0 100%);
    }
  }

  /* =========================================
     4. CORTINA DE TRANSICIÓN
     ========================================= */
  .home-curtain {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: 99999;
    pointer-events: none;

    background: var(--slide-gradient); 
    
    /* ESTADO INICIAL: Invisible (Pegado arriba) */
    clip-path: polygon(0 0, 100% 0, 100% 0, 0 0);
  }

  /* ESTADO ACTIVO: Cae hacia abajo */
  .home-curtain.active {
    pointer-events: all;
    /* He cambiado el nombre de la animación aquí */
    animation: 2.5s cubic-bezier(.25, 1, .30, 1) wipe-in-top-down both;
  }
</style>
  </head>

  <body>
    <div id="home-transition-curtain" class="home-curtain"></div>

    <FondoGlobal />
    <Cursor />
    
    <Navbar currentLang={currentLang} />

    <Loader />
    <div 
      id="global-audio-player" 
      transition:persist
      style="position: fixed; bottom: 30px; right: 96px; z-index: 9999;"
    >
       <AudioVisualizer />
    </div>

    <slot />
    
    <DockMenu />
   
    <BotGO client:load />

    <script>
      import { registerSW } from 'virtual:pwa-register';
      registerSW({ 
        immediate: true,
        onRegisteredSW(swUrl) {
          console.log('PWA: Service Worker activo en', swUrl);
        }
      });
    </script>

    <script src="/scripts/theme-toggle.js" defer></script>

    <script is:inline>
      window.addEventListener('load', () => {
        const loader = document.getElementById('loader-wrapper');
        if (loader) {
          loader.style.opacity = '0';
          setTimeout(() => {
            loader.style.display = 'none';
          }, 500);
        }
      });
    </script>

<script is:inline>
      document.addEventListener('DOMContentLoaded', () => {
        const curtain = document.getElementById('home-transition-curtain');
        
        document.addEventListener('click', (e) => {
          const link = e.target.closest('a');
          if (!link) return;

          const href = link.getAttribute('href');
          const target = link.getAttribute('target'); // Detectar si abre en nueva pestaña
          
          // Lógica para detectar si vamos al home o navegación interna
          const isHomeLink = 
             href === '/' || 
             href === '/es' || 
             href === '/en' ||
             link.classList.contains('js-trigger-home');

          // Solo activamos si NO es ctrl/meta click y no abre en otra pestaña
          if (isHomeLink && !e.ctrlKey && !e.metaKey && target !== '_blank' && curtain) {
            e.preventDefault(); 
            
            // 1. Activar animación
            curtain.classList.add('active');

            // 2. Navegar ESPERANDO a que la cortina baje.
            // La animación dura 2000ms (2s). Ponemos el timeout en 1900ms
            // para que cambie justo cuando la pantalla está negra.
            setTimeout(() => {
              window.location.href = href;
            }, 1900);
          }
        });
      });
    </script>
    
  </body>
</html>