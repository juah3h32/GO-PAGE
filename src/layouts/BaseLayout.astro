---
// src/layouts/BaseLayout.astro

// 1. IMPORTAMOS LO NECESARIO PARA PWA
import { pwaInfo } from 'virtual:pwa-info';

// 2. Importamos componentes
import Loader from "../components/Loader.astro";
import Cursor from "../components/CustomCursor.astro";
import Navbar from '../components/Nadbar.astro'; 
import AudioVisualizer from "../components/AudioVisualizer.astro"; 
import FondoGlobal from "../components/FondoGlobal.astro";
import BotGO from "../components/BotGO.jsx";
import DockMenu from "../components/DockMenu.astro";

// Props
const { 
  title = "Mi sitio", 
  currentLang = "es", 
  moveLogoMobile = false 
} = Astro.props;
---

<!DOCTYPE html>
<html lang={currentLang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1, viewport-fit=cover" />
    <meta name="theme-color" content="#ffffff" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-title" content="GO" />
    
    <title>{title}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="/styles/theme.css" />
    <link rel="apple-touch-icon" href="/pwa-192x192.png" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    { pwaInfo && <Fragment set:html={pwaInfo.webManifest.linkTag} /> }

    <script is:inline>
      (function () {
        try {
          if (localStorage.getItem("theme") === "dark") {
            document.documentElement.classList.add("dark");
          }
        } catch (e) {}
      })();
    </script>

    <style is:global>
      /* =========================================
         VARIABLES Y ESTILOS GLOBALES
         ========================================= */
      :root {
        --body-bg: #ffffff;
        --slide-gradient: linear-gradient(to right, #ffffff 0%, #ffffff 20%, #fb670b 60%, #ff7a18 100%);
        --thumb-bg: rgba(0, 0, 0, 0.08); 
      }

      html.dark {
        --body-bg: #111010;
        --slide-gradient: linear-gradient(to right, #000000 0%, #000000 20%, #fb670b 60%, #ff7a18 100%);
      }

      html, body {
        margin: 0; padding: 0; width: 100%; min-height: 100vh;
        font-family: 'Poppins', sans-serif; overflow-x: hidden; 
      }

      /* ANIMACIONES BASE */
      @keyframes wipe-in-top-down {
        from { clip-path: polygon(0 0, 100% 0, 100% 0, 0 0); }
        to { clip-path: polygon(0 0, 100% 0, 100% 100%, 0 100%); }
      }

      .home-curtain {
        position: fixed; top: 0; left: 0; width: 100vw; height: 100vh;
        z-index: 99999; pointer-events: none;
        background: var(--slide-gradient); 
        clip-path: polygon(0 0, 100% 0, 100% 0, 0 0);
      }

      .home-curtain.active {
        pointer-events: all;
        animation: 2.5s cubic-bezier(.25, 1, .30, 1) wipe-in-top-down both;
      }

      /* =========================================
         ESTILO NOTIFICACIÓN PWA
         ========================================= */
      .pwa-notification {
        display: none; /* Oculto por defecto */
        position: fixed;
        top: 20px; 
        left: 50%;
        transform: translateX(-50%);
        width: 90%;
        max-width: 400px;
        z-index: 10000;
        
        background: rgba(18, 18, 18, 0.85);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        
        padding: 12px 16px;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        
        opacity: 0;
        animation: slideDown 0.6s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
      }

      .pwa-icon-preview {
        width: 40px; height: 40px; border-radius: 10px; background-color: #fff; object-fit: cover;
      }

      .pwa-info { flex: 1; display: flex; flex-direction: column; }
      .pwa-title { color: #fff; font-weight: 600; font-size: 0.9rem; line-height: 1.2; }
      .pwa-desc { color: #aaa; font-size: 0.75rem; }

      .pwa-actions { display: flex; align-items: center; gap: 8px; }

      .pwa-btn-install {
        background: #fb670b; color: #fff; border: none; padding: 6px 14px;
        border-radius: 20px; font-size: 0.8rem; font-weight: 600; cursor: pointer; transition: transform 0.2s;
      }
      .pwa-btn-install:active { transform: scale(0.95); }

      .pwa-btn-close {
        background: transparent; border: none; color: #888; font-size: 1.2rem; cursor: pointer; padding: 4px; line-height: 1;
      }

      @keyframes slideDown {
        from { transform: translate(-50%, -100px); opacity: 0; }
        to { transform: translate(-50%, 0); opacity: 1; }
      }
    </style>
  </head>

  <body>
    <div id="home-transition-curtain" class="home-curtain"></div>

    <FondoGlobal />
    <Cursor />
    
    <Navbar currentLang={currentLang} moveLogoMobile={moveLogoMobile} />

    <Loader />
    <div 
      id="global-audio-player" 
      transition:persist
      style="position: fixed; bottom: 30px; right: 96px; z-index: 9999;"
    >
       <AudioVisualizer />
    </div>

    <slot />
    
    <DockMenu />
   
    <BotGO client:idle language={currentLang} />

    <div id="pwa-notification" class="pwa-notification">
      <img src="/pwa-192x192.png" alt="GO" class="pwa-icon-preview" />
      <div class="pwa-info">
        <span class="pwa-title">Instalar App</span>
        <span class="pwa-desc">Más rápido, siempre disponible</span>
      </div>
      <div class="pwa-actions">
        <button id="pwa-install-btn" class="pwa-btn-install">Obtener</button>
        <button id="pwa-close-btn" class="pwa-btn-close">&times;</button>
      </div>
    </div>

    <script>
      import { registerSW } from 'virtual:pwa-register';
      registerSW({ 
        immediate: true,
        onRegisteredSW(swUrl) {
          console.log('PWA: Service Worker activo en', swUrl);
        }
      });
    </script>

    <script src="/scripts/theme-toggle.js" defer></script>

    <script is:inline>
      const pwaNotification = document.getElementById('pwa-notification');
      const installBtn = document.getElementById('pwa-install-btn');
      const closeBtn = document.getElementById('pwa-close-btn');
      let deferredPrompt;

      // CONFIGURACIÓN ANTI-MOLESTIA
      const DIAS_ESPERA = 3; // Días que tarda en volver a salir si lo cierran
      const PROBABILIDAD_RANDOM = 0.8; // 80% de probabilidad de salir si cumple los días

      // Función para verificar si podemos mostrar el aviso
      function debeMostrarNotificacion() {
        const lastDismiss = localStorage.getItem('pwa-dismiss-timestamp');
        
        // Si nunca lo ha cerrado, mostrar
        if (!lastDismiss) return true;

        // Calcular días pasados
        const ahora = Date.now();
        const diasPasados = (ahora - parseInt(lastDismiss)) / (1000 * 60 * 60 * 24);

        // Si no han pasado los días de espera, NO mostrar
        if (diasPasados < DIAS_ESPERA) return false;

        // Si ya pasaron los días, añadir un factor aleatorio para que no sea tan robótico
        return Math.random() < PROBABILIDAD_RANDOM;
      }

      // 1. FILTROS DE DISPOSITIVO Y ESTADO
      const isStandalone = window.matchMedia('(display-mode: standalone)').matches || 
                           window.navigator.standalone === true;
      
      const isMobileDevice = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);

      // Si ya es PWA o es PC de escritorio -> Bloquear y limpiar
      if (isStandalone || !isMobileDevice) {
         if (pwaNotification) {
            pwaNotification.style.display = 'none';
            pwaNotification.remove(); 
         }
      } 
      else {
        // Escuchar evento de instalación
        window.addEventListener('beforeinstallprompt', (e) => {
          e.preventDefault();
          deferredPrompt = e;
          
          // Verificar lógica de tiempo/molestia
          if (debeMostrarNotificacion() && pwaNotification) {
            setTimeout(() => {
              pwaNotification.style.display = 'flex';
            }, 3000); // 3 seg de retraso para no tapar contenido inmediatamente
          }
        });
      }

      // 2. ACCIONES DE BOTONES
      if (installBtn) {
        installBtn.addEventListener('click', async () => {
          if (!deferredPrompt) return;
          deferredPrompt.prompt();
          const { outcome } = await deferredPrompt.userChoice;
          console.log(`Usuario decidió: ${outcome}`);
          deferredPrompt = null;
          if (pwaNotification) pwaNotification.style.display = 'none';
          
          // Si instala, borramos el "castigo" de tiempo por si acaso
          localStorage.removeItem('pwa-dismiss-timestamp');
        });
      }

      if (closeBtn) {
        closeBtn.addEventListener('click', () => {
          if (pwaNotification) pwaNotification.style.display = 'none';
          // GUARDAR LA FECHA ACTUAL PARA NO MOSTRAR POR UNOS DÍAS
          localStorage.setItem('pwa-dismiss-timestamp', Date.now().toString());
        });
      }

      window.addEventListener('appinstalled', () => {
        if (pwaNotification) pwaNotification.style.display = 'none';
        deferredPrompt = null;
        console.log('¡PWA Instalada con éxito!');
      });
    </script>

    <script is:inline>
      window.addEventListener('load', () => {
        const loader = document.getElementById('loader-wrapper');
        if (loader) {
          loader.style.opacity = '0';
          setTimeout(() => { loader.style.display = 'none'; }, 500);
        }
      });

      document.addEventListener('DOMContentLoaded', () => {
        const curtain = document.getElementById('home-transition-curtain');
        document.addEventListener('click', (e) => {
          const link = e.target.closest('a');
          if (!link) return;
          const href = link.getAttribute('href');
          const target = link.getAttribute('target'); 
          const isHomeLink = href === '/' || href === '/es' || href === '/en' || link.classList.contains('js-trigger-home');
          const isMobile = window.matchMedia('(max-width: 1024px)').matches;

          if (isHomeLink && !isMobile && !e.ctrlKey && !e.metaKey && target !== '_blank' && curtain) {
            e.preventDefault(); 
            curtain.classList.add('active');
            setTimeout(() => { window.location.href = href; }, 1900);
          }
        });
      });
    </script>
    
  </body>
</html>